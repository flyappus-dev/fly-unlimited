---
import SiteHeader from "../components/SiteHeader.astro";

const {
  title = "FLY Unlimited",
  description = "FLY Unlimited",
} = Astro.props;

// ✅ Choose ONE and keep it consistent with /public
const LOGO = "/logo.png"; // change to "/logo.svg" if you use svg
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style>
      :root{
        --bg:#fff; --text:#0b0b0f; --muted:rgba(11,11,15,.62);
        --hair:rgba(11,11,15,.10); --max:1080px; --r:16px;
      }
      *{box-sizing:border-box}
      body{
        margin:0;
        font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial;
        background: var(--bg);
        color: var(--text);
      }
      a{color:inherit;text-decoration:none}
      .wrap{max-width:var(--max);margin:0 auto;padding:0 20px}
      .page{padding:28px 0 80px}
      .h1{font-size:clamp(36px,5vw,56px);line-height:1.05;letter-spacing:-.02em;margin:0}
      .sub{color:var(--muted);font-size:16px;line-height:1.6;margin:14px 0 0;max-width:720px}
      .card{border:1px solid var(--hair);border-radius:var(--r);background:rgba(11,11,15,.03)}
      .grid{display:grid;gap:14px}
      .grid3{grid-template-columns:repeat(3,minmax(0,1fr))}
      @media(max-width:900px){.grid3{grid-template-columns:1fr}}
      .btn{
        display:inline-flex;align-items:center;justify-content:center;
        padding:12px 14px;border-radius:999px;
        border:1px solid var(--hair);
        background:rgba(11,11,15,.92);color:#fff;font-weight:650;
      }
      .btnGhost{background:rgba(11,11,15,.03);color:var(--text)}
      .footer{
        margin-top:60px;padding-top:18px;border-top:1px solid var(--hair);
        color:var(--muted);font-size:13px;display:flex;justify-content:space-between;gap:12px;flex-wrap:wrap;
      }

      /* ✅ Simple splash */
      #splash{position:fixed;inset:0;display:grid;place-items:center;background:#fff;z-index:9999}
      #splash .inner{display:grid;place-items:center;gap:12px;transition:opacity .35s ease,transform .35s ease}
      #splash.fade .inner{opacity:0;transform:translateY(6px)}
      #splash img{width:78px;height:78px;object-fit:contain}
      #splash .brand{font-weight:800;letter-spacing:-.02em}
      #splash .hint{font-size:13px;color:var(--muted)}
    </style>
  </head>

  <body>
    <div id="splash" aria-hidden="true">
      <div class="inner">
        <img src={LOGO} alt="" />
        <div class="brand">FLY Unlimited</div>
        <div class="hint">Loading…</div>
      </div>
    </div>

    <script>
      (function () {
        const splash = document.getElementById("splash");
        if (!splash) return;
        const key = "fly_splash_seen";
        if (sessionStorage.getItem(key)) { splash.remove(); return; }
        sessionStorage.setItem(key, "1");
        setTimeout(() => splash.classList.add("fade"), 350);
        setTimeout(() => splash.remove(), 750);
      })();
    </script>

    <SiteHeader logo={LOGO} />
    <main class="wrap page">
      <slot />
      <footer class="footer">
        <div>© {new Date().getFullYear()} FLY Unlimited</div>
        <div style="display:flex; gap:14px; flex-wrap:wrap;">
          <a href="/terms">Terms</a>
          <a href="/privacy">Privacy</a>
          <a href="/contact">Contact</a>
        </div>
      </footer>
    </main>
  </body>
</html>
