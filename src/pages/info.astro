---
const siteName = "FLY Unlimited";

// ✅ Put the email you want public here (recommended: hello@ / contact@ / support@)
const publicEmail = "contact@fly-unlimited.com";

// Optional: your personal/admin email (not shown publicly unless you want it)
const adminEmail = "name.lastname@yourdomain.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Info • {siteName}</title>
    <meta name="description" content="Contact and basic information for FLY Unlimited." />
    <style>
      :root{
        --bg:#ffffff;
        --text:#0b0c10;
        --muted:rgba(11,12,16,.68);
        --line:rgba(11,12,16,.10);
        --pill:rgba(11,12,16,.06);
        --max:980px;
      }
      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--bg);
        color:var(--text);
        line-height:1.45;
      }
      a{color:inherit;text-decoration:none}
      a:hover{opacity:.92}

      .wrap{max-width:var(--max);margin:0 auto;padding:22px 20px 70px}

      .top{
        display:flex;align-items:center;justify-content:space-between;gap:16px;
        padding:10px 4px;
      }
      .brand{display:flex;align-items:center;min-height:44px}
      .mascot{width:26px;height:26px;border-radius:10px;object-fit:contain;display:block}

      .tabs{
        display:flex;gap:8px;align-items:center;
        background:var(--pill);border:1px solid var(--line);
        border-radius:999px;padding:6px;
      }
      .tab{
        padding:8px 12px;border-radius:999px;
        font-weight:700;font-size:14px;color:rgba(11,12,16,.72);
      }
      .tab.active{background:#0b0c10;color:#fff}

      .page{padding:64px 0 0}
      .logoRow{display:flex;justify-content:center;margin-bottom:14px}
      .logoRow img{height:34px;width:auto;display:block}

      h1{
        margin:0 0 10px;
        text-align:center;
        font-size: clamp(28px, 3.2vw, 42px);
        letter-spacing:-.5px;
      }
      .sub{
        margin:0 auto 28px;
        text-align:center;
        max-width:760px;
        color:var(--muted);
        font-size:16px;
      }

      .panel{
        border:1px solid var(--line);
        border-radius:18px;
        padding:18px;
        max-width:760px;
        margin:0 auto;
        background:#fff;
      }
      .row{display:flex;justify-content:space-between;gap:12px;flex-wrap:wrap}
      .label{color:var(--muted);font-weight:800}
      .value a{color:#0b0c10;text-decoration:underline}

      .hint{
        margin-top:12px;
        color:var(--muted);
        font-size:13px;
      }

      .footer{
        margin-top:64px;padding-top:18px;border-top:1px solid var(--line);
        display:flex;align-items:center;justify-content:space-between;gap:14px;flex-wrap:wrap;
        color:var(--muted);font-size:13px;
      }
      .links{display:flex;gap:14px;flex-wrap:wrap}
      .links a{color:var(--muted)}
      .links a:hover{color:var(--text)}
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/" aria-label="Home">
          <img class="mascot" src="/logo-alt.png" alt="FLY mascot" />
        </a>

        <nav class="tabs" aria-label="Navigation">
          <a class="tab" href="/">Home</a>
          <a class="tab" href="/how-it-works/">How it works</a>
          <a class="tab active" href="/info/">Info</a>
        </nav>
      </header>

      <main class="page">
        <div class="logoRow">
          <img src="/logo.png" alt="FLY Unlimited" />
        </div>

        <h1>Info</h1>
        <p class="sub">Contact + basic information for enrollment and support.</p>

        <section class="panel">
          <div class="row">
            <div class="label">Public contact</div>
            <div class="value"><a href={`mailto:${publicEmail}`}>{publicEmail}</a></div>
          </div>

          <hr style="border:none;border-top:1px solid var(--line);margin:14px 0;" />

          <div class="row">
            <div class="label">Status</div>
            <div class="value">In development • Coming soon</div>
          </div>

          <hr style="border:none;border-top:1px solid var(--line);margin:14px 0;" />

          <div class="row">
            <div class="label">Legal</div>
            <div class="value"><a href="/terms/">Terms</a> • <a href="/privacy/">Privacy</a></div>
          </div>

          <p class="hint">
            
        </section>

        <footer class="footer">
          <div>© 2026 {siteName}</div>
          <div class="links">
            <a href="/info/">Contact</a>
            <a href="/terms/">Terms</a>
            <a href="/privacy/">Privacy</a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
