---
const siteName = "FLY Unlimited";

// ✅ Put the email you want public here (recommended: hello@ / contact@ / support@)
const publicEmail = "contact@fly-unlimited.com";

// Optional: your personal/admin email (not shown publicly unless you want it)
const adminEmail = "name.lastname@yourdomain.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Info • {siteName}</title>
    <meta name="description" content="Contact and basic information for FLY Unlimited." />
    <style>
      :root{
        --bg:#ffffff;
        --text:#0b0c10;
        --muted:rgba(11,12,16,.68);
        --line:rgba(11,12,16,.10);
        --pill:rgba(11,12,16,.06);
        --max:980px;
        --radius:20px;
      }
      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--bg);
        color:var(--text);
        line-height:1.45;
      }
      a{color:inherit;text-decoration:none}
      a:hover{opacity:.96}

      .wrap{max-width:var(--max);margin:0 auto;padding:22px 20px 72px}

      .top{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:16px;
        padding:10px 4px;
      }
      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        min-height:44px;
      }
      .mascot{
        width:26px;height:26px;
        border-radius:10px;
        object-fit:contain;
        display:block;
      }

      /* ✅ icon-only nav (matches homepage) */
      .nav{
        display:flex;
        align-items:center;
        gap:10px;
        padding:8px;
        border:1px solid var(--line);
        border-radius:999px;
        background:rgba(255,255,255,.9);
        backdrop-filter:saturate(180%) blur(8px);
      }
      .navBtn{
        width:40px;height:40px;
        display:grid;
        place-items:center;
        border-radius:999px;
        border:1px solid transparent;
        color:rgba(11,12,16,.72);
      }
      .navBtn:hover{
        background:var(--pill);
        border-color:var(--line);
      }
      .navBtn.active{
        background:#0b0c10;
        color:#fff;
      }
      .navBtn svg{
        width:18px;height:18px;
        stroke:currentColor;
        stroke-width:2.2;
        fill:none;
        stroke-linecap:round;
        stroke-linejoin:round;
      }

      .page{padding:64px 0 0}

      .logoRow{display:flex;justify-content:center;margin-bottom:14px}
      .logoRow img{height:34px;width:auto;display:block}

      h1{
        margin:0 0 10px;
        text-align:center;
        font-size: clamp(28px, 3.2vw, 42px);
        letter-spacing:-.5px;
      }
      .sub{
        margin:0 auto 26px;
        text-align:center;
        max-width:760px;
        color:var(--muted);
        font-size:16px;
      }

      /* ✅ Hero placeholder image */
      .heroMedia{
        max-width:860px;
        margin:0 auto 18px;
        border-radius:24px;
        border:1px solid var(--line);
        overflow:hidden;
        background:#fff;
        box-shadow: 0 14px 40px rgba(11,12,16,.06);
      }
      .heroMedia img{
        width:100%;
        height:auto;
        display:block;
      }
      .heroCaption{
        padding:14px 16px;
        border-top:1px solid var(--line);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:12px;
        color:var(--muted);
        font-size:13px;
        flex-wrap:wrap;
      }
      .chip{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding:8px 12px;
        border:1px solid var(--line);
        border-radius:999px;
        background:#fff;
        color:rgba(11,12,16,.78);
        font-weight:800;
        white-space:nowrap;
      }
      .chip svg{width:16px;height:16px;stroke:#0b0c10;stroke-width:2.2;fill:none}

      /* ✅ Contact panel (more premium) */
      .panel{
        border:1px solid var(--line);
        border-radius:22px;
        padding:18px;
        max-width:860px;
        margin:0 auto;
        background:#fff;
        box-shadow: 0 10px 28px rgba(11,12,16,.04);
      }
      .row{
        display:flex;
        justify-content:space-between;
        gap:12px;
        flex-wrap:wrap;
        align-items:center;
      }
      .label{color:var(--muted);font-weight:800}
      .value a{color:#0b0c10;text-decoration:underline}

      .divider{
        border:none;
        border-top:1px solid var(--line);
        margin:14px 0;
      }

      /* ✅ Small “cards” inside */
      .miniGrid{
        margin-top:12px;
        display:grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap:12px;
      }
      @media (max-width: 560px){
        .miniGrid{grid-template-columns: 1fr;}
      }
      .mini{
        border:1px solid var(--line);
        background:#fff;
        border-radius:18px;
        padding:14px 14px 13px;
        display:flex;
        align-items:flex-start;
        gap:12px;
      }
      .miniIcon{
        width:38px;height:38px;
        border-radius:14px;
        display:grid;
        place-items:center;
        background:var(--pill);
        border:1px solid var(--line);
        flex:0 0 auto;
      }
      .miniIcon svg{
        width:18px;height:18px;
        stroke:#0b0c10;
        stroke-width:2.2;
        fill:none;
        stroke-linecap:round;
        stroke-linejoin:round;
      }
      .mini h3{margin:0;font-size:14px;letter-spacing:-.15px}
      .mini p{margin:2px 0 0;color:var(--muted);font-size:13px;line-height:1.45}

      .footer{
        margin-top:64px;
        padding-top:18px;
        border-top:1px solid var(--line);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:14px;
        flex-wrap:wrap;
        color:var(--muted);
        font-size:13px;
      }
      .links{display:flex;gap:14px;flex-wrap:wrap;align-items:center}
      .links a{color:var(--muted)}
      .links a:hover{color:var(--text)}
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/" aria-label="Home">
          <img class="mascot" src="/logo-alt.png" alt="FLY mascot" />
        </a>

        <!-- ✅ icon-only nav -->
        <nav class="nav" aria-label="Navigation">
          <a class="navBtn" href="/" aria-label="Home" title="Home">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M3 10.5 12 3l9 7.5" />
              <path d="M5.5 9.8V21h13V9.8" />
            </svg>
          </a>

          <a class="navBtn" href="/how-it-works/" aria-label="LiveTime" title="LiveTime">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M13 2 4 14h7l-1 8 10-14h-7z" />
            </svg>
          </a>

          <a class="navBtn active" href="/info/" aria-label="Info" title="Info">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <circle cx="12" cy="12" r="9" />
              <path d="M12 10.6v6" />
              <path d="M12 7.4h.01" />
            </svg>
          </a>
        </nav>
      </header>

      <main class="page">
        <div class="logoRow">
          <img src="/logo.png" alt="FLY Unlimited" />
        </div>

        <h1>Info</h1>
        <p class="sub">A clean point of contact — for support, enrollment, and updates.</p>

        <!-- ✅ Placeholder image (upload /public/info.jpg) -->
        <div class="heroMedia" role="img" aria-label="FLY placeholder">
          <img src="/info.jpg" alt="FLY placeholder image" />
          <div class="heroCaption">
            <span>Contact and updates.</span>
            <span class="chip" aria-label="Email">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M4 6h16v12H4z" />
                <path d="M4 7l8 6 8-6" />
              </svg>
              {publicEmail}
            </span>
          </div>
        </div>

        <section class="panel" aria-label="Contact details">
          <div class="row">
            <div class="label">Public contact</div>
            <div class="value"><a href={`mailto:${publicEmail}`}>{publicEmail}</a></div>
          </div>

          <hr class="divider" />

          <div class="row">
            <div class="label">Status</div>
            <div class="value">In development • Coming soon</div>
          </div>

          <div class="miniGrid" aria-label="Highlights">
            <div class="mini">
              <div class="miniIcon" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M21 8v8" />
                  <path d="M17 6v12" />
                  <path d="M13 10v4" />
                  <path d="M9 9v6" />
                  <path d="M5 11v2" />
                </svg>
              </div>
              <div>
                <h3>Fast responses</h3>
                <p>Use the public email for anything you need.</p>
              </div>
            </div>

            <div class="mini">
              <div class="miniIcon" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M12 2v4" />
                  <path d="M12 18v4" />
                  <path d="M4.93 4.93 7.76 7.76" />
                  <path d="M16.24 16.24 19.07 19.07" />
                  <circle cx="12" cy="12" r="5" />
                </svg>
              </div>
              <div>
                <h3>Product updates</h3>
                <p>We’ll share release updates as we get closer.</p>
              </div>
            </div>
          </div>
        </section>

        <footer class="footer">
          <div>© 2026 {siteName}</div>
          <div class="links">
            <a href="/info/">Contact</a>
            <a href="/terms/">Terms</a>
            <a href="/privacy/">Privacy</a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
