---
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="FLY Unlimited" description="FLY Unlimited">
  <section style="padding-top: 24px;">
    <div style="display:flex; align-items:center; gap:14px;">
      <img src="/logo.png" alt="FLY Unlimited" style="width:56px; height:56px; object-fit:contain;" />
      <div style="display:flex; flex-direction:column;">
        <div style="font-weight:900; letter-spacing:-0.02em; font-size:18px;">FLY</div>
        <div style="color: rgba(11,11,15,0.62); font-size:13px;">Unlimited</div>
      </div>
    </div>

    <h1 class="h1" style="margin-top: 18px;">A premium experience from the first tap.</h1>
    <p class="sub">Replace this line with your one-sentence pitch.</p>

    <div style="display:flex; gap:10px; flex-wrap:wrap; margin-top:18px;">
      <a class="btn" href="/how-it-works">How it works</a>
      <a class="btn btnGhost" href="/info">Info</a>
    </div>
  </section>
</SiteLayout>
