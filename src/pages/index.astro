---
const siteName = "FLY Unlimited";
const contactEmail = "hello@fly-unlimited.com"; // change if needed

// App Store link (if you don't have it yet, leave "#")
const appStoreUrl = "#";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
    <meta name="description" content="FLY Unlimited — coming soon." />

    <style>
      :root{
        --bg:#ffffff;
        --text:#0b0c10;
        --muted:rgba(11,12,16,.68);
        --line:rgba(11,12,16,.10);
        --pill:rgba(11,12,16,.06);
        --max:1100px;
        --radius:18px;
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--bg);
        color:var(--text);
        line-height:1.45;
      }

      a{color:inherit;text-decoration:none}
      a:hover{opacity:.96}

      .wrap{max-width:var(--max);margin:0 auto;padding:22px 20px 72px}

      /* Top bar */
      .top{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:16px;
        padding:10px 4px;
      }

      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        min-height:44px;
      }
      .mascot{
        width:26px;
        height:26px;
        border-radius:10px;
        display:block;
        object-fit:contain;
      }

      /* ✅ Icon-only nav */
      .nav{
        display:flex;
        align-items:center;
        gap:10px;
        padding:8px;
        border:1px solid var(--line);
        border-radius:999px;
        background:rgba(255,255,255,.9);
        backdrop-filter:saturate(180%) blur(8px);
      }
      .navBtn{
        width:40px;height:40px;
        display:grid;
        place-items:center;
        border-radius:999px;
        border:1px solid transparent;
        color:rgba(11,12,16,.72);
      }
      .navBtn:hover{
        background:var(--pill);
        border-color:var(--line);
      }
      .navBtn.active{
        background:#0b0c10;
        color:#fff;
      }
      .navBtn svg{
        width:18px;height:18px;
        stroke:currentColor;
        stroke-width:2.2;
        fill:none;
        stroke-linecap:round;
        stroke-linejoin:round;
      }

      /* Hero */
      .hero{
        padding:92px 0 10px;
        text-align:center;
      }

      /* ✅ BIG logo */
      .centerLogo{
        display:block;
        margin:0 auto 18px;
        height:140px;
        width:auto;
      }
      @media (max-width: 980px){
        .centerLogo{height:120px;}
      }
      @media (max-width: 560px){
        .centerLogo{height:92px;}
      }

      .sub{
        margin:0 auto;
        max-width:920px;
        font-size:19px;
        color:var(--muted);
      }

      /* ✅ Premium hero image */
      .heroMedia{
        margin:44px auto 0;
        max-width:980px;
        border-radius:24px;
        border:1px solid var(--line);
        overflow:hidden;
        background:#fff;
        box-shadow: 0 14px 40px rgba(11,12,16,.06);
      }
      .heroMedia img{
        width:100%;
        height:auto;
        display:block;
      }
      .heroMediaCaption{
        padding:14px 16px;
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:12px;
        border-top:1px solid var(--line);
        color:var(--muted);
        font-size:13px;
      }
      .chip{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding:8px 12px;
        border:1px solid var(--line);
        border-radius:999px;
        background:#fff;
        color:rgba(11,12,16,.78);
        font-weight:800;
        white-space:nowrap;
      }
      .chip svg{width:16px;height:16px;stroke:#0b0c10;stroke-width:2.2;fill:none}

      /* ✅ Feature cards (premium, not “giant icons”) */
      .features{
        margin-top:72px;
        display:grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap:16px;
      }
      @media (max-width: 980px){
        .features{grid-template-columns: repeat(2, minmax(0, 1fr));}
      }
      @media (max-width: 560px){
        .features{grid-template-columns: 1fr;}
      }

      .card{
        text-align:left;
        border:1px solid var(--line);
        border-radius:20px;
        padding:18px;
        background:#fff;
        box-shadow: 0 10px 28px rgba(11,12,16,.04);
      }
      .cardTop{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:12px;
        margin-bottom:10px;
      }
      .iconBadge{
        width:42px;height:42px;
        border-radius:14px;
        display:grid;
        place-items:center;
        background:var(--pill);
        border:1px solid var(--line);
      }
      .iconBadge svg{
        width:18px;height:18px;
        stroke:#0b0c10;
        stroke-width:2.2;
        fill:none;
        stroke-linecap:round;
        stroke-linejoin:round;
      }
      .card h3{
        margin:0;
        font-size:15px;
        letter-spacing:-.2px;
      }
      .card p{
        margin:0;
        color:var(--muted);
        font-size:13.5px;
        line-height:1.5;
      }

      /* Footer */
      .footer{
        margin-top:74px;
        padding-top:18px;
        border-top:1px solid var(--line);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:14px;
        flex-wrap:wrap;
        color:var(--muted);
        font-size:13px;
      }
      .links{display:flex;gap:14px;flex-wrap:wrap;align-items:center}
      .links a{color:var(--muted)}
      .links a:hover{color:var(--text)}

      /* App Store note */
      .appNote{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding:8px 12px;
        border:1px solid var(--line);
        border-radius:999px;
        background:#fff;
        font-weight:800;
        color:rgba(11,12,16,.78);
      }
      .appNote svg{width:18px;height:18px}
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/" aria-label="FLY Unlimited">
          <img class="mascot" src="/logo-alt.png" alt="FLY mascot" />
        </a>

        <!-- ✅ icon-only nav -->
        <nav class="nav" aria-label="Navigation">
          <a class="navBtn active" href="/" aria-label="Home" title="Home">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M3 10.5 12 3l9 7.5" />
              <path d="M5.5 9.8V21h13V9.8" />
            </svg>
          </a>

          <a class="navBtn" href="/how-it-works/" aria-label="How it works" title="How it works">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path d="M12 2v4" />
              <path d="M12 18v4" />
              <path d="M4.93 4.93 7.76 7.76" />
              <path d="M16.24 16.24 19.07 19.07" />
              <path d="M2 12h4" />
              <path d="M18 12h4" />
              <path d="M4.93 19.07 7.76 16.24" />
              <path d="M16.24 7.76 19.07 4.93" />
              <circle cx="12" cy="12" r="3.2" />
            </svg>
          </a>

          <a class="navBtn" href="/info/" aria-label="Info" title="Info">
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <circle cx="12" cy="12" r="9" />
              <path d="M12 10.6v6" />
              <path d="M12 7.4h.01" />
            </svg>
          </a>
        </nav>
      </header>

      <main class="hero">
        <img class="centerLogo" src="/logo.png" alt="FLY Unlimited" />

        <p class="sub">
          Looking forward to connecting, sharing, collaborating, exchanging, creating, and FLYing with you.
        </p>

        <!-- ✅ Replace /public/hero.jpg with your own later -->
        <div class="heroMedia" role="img" aria-label="FLY preview">
          <img src="/hero.jpg" alt="FLY preview (placeholder)" />
          <div class="heroMediaCaption">
            <span>Coming soon to iOS.</span>
            <span class="chip" aria-label="App Store coming soon">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M16.6 13.2c.1 2.8 2.5 3.7 2.5 3.7s-1.9 5.3-4.5 5.3c-1.1 0-2-.7-3.2-.7s-2.3.7-3.2.7C5.8 22.2 3 17.7 3 13.6c0-3.5 2.1-5.3 4-5.3 1.2 0 2.3.8 3.2.8.9 0 2.2-.9 3.7-.9.6 0 2.6.1 3.8 2-3.4 1.9-3.1 5-3.1 5z" fill="#0b0c10" stroke="none"/>
                <path d="M15.3 2.2c.1 1.3-.5 2.6-1.3 3.5-.9.9-2.2 1.6-3.4 1.5-.2-1.3.5-2.7 1.3-3.5.9-.9 2.3-1.6 3.4-1.5z" fill="#0b0c10" stroke="none"/>
              </svg>
              App Store — Coming soon
            </span>
          </div>
        </div>

        <section class="features" aria-label="Key features">
          <div class="card">
            <div class="cardTop">
              <div class="iconBadge" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M21 12a8 8 0 0 1-8 8H7l-4 3 1.2-4.7A8 8 0 1 1 21 12z" />
                  <path d="M12 8.6c-1.4 0-2.5.8-2.5 2" />
                  <path d="M12 15.8h.01" />
                </svg>
              </div>
              <h3>What do you need?</h3>
            </div>
            <p>Whatever it is just ask.</p>
          </div>

          <div class="card">
            <div class="cardTop">
              <div class="iconBadge" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M12 21s-6-4.2-6-9a3.6 3.6 0 0 1 6-2.2A3.6 3.6 0 0 1 18 12c0 4.8-6 9-6 9z" />
                  <path d="M12 4v2" />
                  <path d="M12 8v.01" />
                </svg>
              </div>
              <h3>I’m interested!</h3>
            </div>
            <p>Find things to do that fit what you love.</p>
          </div>

          <div class="card">
            <div class="cardTop">
              <div class="iconBadge" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M13 2 4 14h7l-1 8 10-14h-7z" />
                </svg>
              </div>
              <h3>It’s LiveTime!</h3>
            </div>
            <p>Create, collab, exchange and do it all right now.</p>
          </div>

          <div class="card">
            <div class="cardTop">
              <div class="iconBadge" aria-hidden="true">
                <svg viewBox="0 0 24 24">
                  <path d="M9 2h6" />
                  <path d="M12 14V9" />
                  <path d="M12 22a8 8 0 1 0-8-8 8 8 0 0 0 8 8z" />
                </svg>
              </div>
              <h3>No Time to Waste</h3>
            </div>
            <p>Get what you need fast, whatever it is.</p>
          </div>
        </section>

        <footer class="footer">
          <div>© 2026 {siteName}</div>

          <div class="links">
            <a href="/info/">Contact</a>
            <a href="/terms/">Terms</a>
            <a href="/privacy/">Privacy</a>

            <a class="appNote" href={appStoreUrl} aria-label="App Store coming soon">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M16.6 13.2c.1 2.8 2.5 3.7 2.5 3.7s-1.9 5.3-4.5 5.3c-1.1 0-2-.7-3.2-.7s-2.3.7-3.2.7C5.8 22.2 3 17.7 3 13.6c0-3.5 2.1-5.3 4-5.3 1.2 0 2.3.8 3.2.8.9 0 2.2-.9 3.7-.9.6 0 2.6.1 3.8 2-3.4 1.9-3.1 5-3.1 5z" fill="#0b0c10" stroke="none"/>
                <path d="M15.3 2.2c.1 1.3-.5 2.6-1.3 3.5-.9.9-2.2 1.6-3.4 1.5-.2-1.3.5-2.7 1.3-3.5.9-.9 2.3-1.6 3.4-1.5z" fill="#0b0c10" stroke="none"/>
              </svg>
              App Store — Coming soon
            </a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
