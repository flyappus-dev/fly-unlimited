---
const siteName = "FLY Unlimited";
const contactEmail = "hello@fly-unlimited.com"; // change if needed

// App Store link (if you don't have it yet, leave "#")
const appStoreUrl = "#";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
    <meta name="description" content="FLY Unlimited — coming soon." />
    <style>
      :root{
        --bg:#ffffff;
        --text:#0b0c10;
        --muted:rgba(11,12,16,.68);
        --line:rgba(11,12,16,.10);
        --pill:rgba(11,12,16,.06);
        --max:1100px;
        --radius:16px;
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--bg);
        color:var(--text);
        line-height:1.45;
      }
      a{color:inherit;text-decoration:none}
      a:hover{opacity:.92}

      .wrap{max-width:var(--max);margin:0 auto;padding:22px 20px 70px}

      /* Top bar */
      .top{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:16px;
        padding:10px 4px;
      }

      /* only mascot on the left */
      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        min-height:44px;
      }
      .mascot{
        width:26px;
        height:26px;
        border-radius:10px;
        display:block;
        object-fit:contain;
      }

      .tabs{
        display:flex;
        gap:8px;
        align-items:center;
        background:var(--pill);
        border:1px solid var(--line);
        border-radius:999px;
        padding:6px;
      }
      .tab{
        padding:8px 12px;
        border-radius:999px;
        font-weight:700;
        font-size:14px;
        color:rgba(11,12,16,.72);
      }
      .tab.active{
        background:#0b0c10;
        color:#fff;
      }

      /* Hero */
      .hero{
        padding:96px 0 42px;
        text-align:center;
      }

      /* ✅ MUCH bigger center logo */
      .centerLogo{
        display:block;
        margin:0 auto 18px;
        height:140px;  /* BIG */
        width:auto;
      }
      @media (max-width: 980px){
        .centerLogo{height:120px;}
      }
      @media (max-width: 560px){
        .centerLogo{height:92px;}
      }

      .sub{
        margin:0 auto;
        max-width:900px;
        font-size:19px;
        color:var(--muted);
      }

      /* ✅ push features down */
      .features{
        margin-top:118px;
        display:grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap:26px;
      }
      @media (max-width: 980px){
        .features{grid-template-columns: repeat(2, minmax(0, 1fr));}
      }
      @media (max-width: 560px){
        .features{grid-template-columns: 1fr;}
      }

      .feat{
        text-align:center;
      }
      .featIcon{
        width:92px;height:92px;
        margin:0 auto 14px;
        display:grid;
        place-items:center;
      }
      .featIcon svg{
        width:92px;height:92px;
        stroke:#0b0c10;
        stroke-width:2.4;
        fill:none;
        stroke-linecap:round;
        stroke-linejoin:round;
      }
      .feat h3{
        margin:0 0 6px;
        font-size:16px;
        letter-spacing:-.1px;
      }
      .feat p{
        margin:0 auto;
        max-width:260px;
        color:var(--muted);
        font-size:14px;
      }

      /* Footer */
      .footer{
        margin-top:72px;
        padding-top:18px;
        border-top:1px solid var(--line);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:14px;
        flex-wrap:wrap;
        color:var(--muted);
        font-size:13px;
      }
      .links{display:flex;gap:14px;flex-wrap:wrap;align-items:center}
      .links a{color:var(--muted)}
      .links a:hover{color:var(--text)}

      /* App Store note */
      .appNote{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding:8px 12px;
        border:1px solid var(--line);
        border-radius:999px;
        background:#fff;
        font-weight:800;
        color:rgba(11,12,16,.78);
      }
      .appNote svg{width:18px;height:18px}
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <a class="brand" href="/" aria-label="FLY Unlimited">
          <img class="mascot" src="/logo-alt.png" alt="FLY mascot" />
        </a>

        <nav class="tabs" aria-label="Navigation">
          <a class="tab active" href="/">Home</a>
          <a class="tab" href="/how-it-works/">How it works</a>
          <a class="tab" href="/info/">Info</a>
        </nav>
      </header>

      <main class="hero">
        <img class="centerLogo" src="/logo.png" alt="FLY Unlimited" />

        <p class="sub">
          Looking forward to connecting, sharing, collaborating, exchanging, creating, and FLYing with you.
        </p>

        <section class="features" aria-label="Key features">
          <!-- 1) What do you need? -->
          <div class="feat">
            <div class="featIcon">
              <!-- chat/question bubble -->
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M21 12a8 8 0 0 1-8 8H7l-4 3 1.2-4.7A8 8 0 1 1 21 12z" />
                <path d="M9.7 9.2a2.3 2.3 0 0 1 4.2 1.2c0 1.6-1.6 2-2.2 2.6-.4.4-.4.8-.4 1.5" />
                <path d="M11.8 16.9h.01" />
              </svg>
            </div>
            <h3>What do you need?</h3>
            <p>Whatever it is just ask.</p>
          </div>

          <!-- 2) I'm interested! -->
          <div class="feat">
            <div class="featIcon">
              <!-- compass + heart -->
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <circle cx="12" cy="12" r="9" />
                <path d="M14.8 9.2 13.2 13.2 9.2 14.8 10.8 10.8z" />
                <path d="M16.9 16.1c-.8 1-2.2 1.6-3.5.8-1.3.8-2.7.2-3.5-.8-.8-1 .1-2.4 1.4-2.5 1.1-.1 1.8.7 2.1 1.2.3-.5 1-1.3 2.1-1.2 1.3.1 2.2 1.5 1.4 2.5z" />
              </svg>
            </div>
            <h3>I’m interested!</h3>
            <p>Find things to do that fit what you love.</p>
          </div>

          <!-- 3) It's LiveTime! -->
          <div class="feat">
            <div class="featIcon">
              <!-- lightning / realtime -->
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M13 2 4 14h7l-1 8 10-14h-7z" />
                <path d="M5 4c1.3 1.2 1.3 3.1 0 4.3" />
                <path d="M19 15.7c1.3 1.2 1.3 3.1 0 4.3" />
              </svg>
            </div>
            <h3>It’s LiveTime!</h3>
            <p>Create, collab, exchange and do it all right now.</p>
          </div>

          <!-- 4) No Time to Waste -->
          <div class="feat">
            <div class="featIcon">
              <!-- stopwatch -->
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M9 2h6" />
                <path d="M12 14V9" />
                <path d="M12 22a8 8 0 1 0-8-8 8 8 0 0 0 8 8z" />
                <path d="M16.5 6.5 18 5" />
              </svg>
            </div>
            <h3>No Time to Waste</h3>
            <p>Get what you need fast, whatever it is.</p>
          </div>
        </section>

        <footer class="footer">
          <div>© 2026 {siteName}</div>

          <div class="links">
            <a href="/info/">Contact</a>
            <a href="/terms/">Terms</a>
            <a href="/privacy/">Privacy</a>

            <a class="appNote" href={appStoreUrl} aria-label="App Store coming soon">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M16.6 13.2c.1 2.8 2.5 3.7 2.5 3.7s-1.9 5.3-4.5 5.3c-1.1 0-2-.7-3.2-.7s-2.3.7-3.2.7C5.8 22.2 3 17.7 3 13.6c0-3.5 2.1-5.3 4-5.3 1.2 0 2.3.8 3.2.8.9 0 2.2-.9 3.7-.9.6 0 2.6.1 3.8 2-3.4 1.9-3.1 5-3.1 5z" fill="#0b0c10" stroke="none"/>
                <path d="M15.3 2.2c.1 1.3-.5 2.6-1.3 3.5-.9.9-2.2 1.6-3.4 1.5-.2-1.3.5-2.7 1.3-3.5.9-.9 2.3-1.6 3.4-1.5z" fill="#0b0c10" stroke="none"/>
              </svg>
              App Store — Coming soon
            </a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
