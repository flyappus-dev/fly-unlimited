---
const siteName = "FLY Unlimited";
const contactEmail = "hello@fly-unlimited.com"; // change if needed

// App Store link (if you don't have it yet, leave "#")
const appStoreUrl = "#";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{siteName}</title>
    <meta name="description" content="FLY Unlimited — coming soon." />
    <style>
      :root{
        --bg:#ffffff;
        --text:#0b0c10;
        --muted:rgba(11,12,16,.68);
        --line:rgba(11,12,16,.10);
        --pill:rgba(11,12,16,.06);
        --max:1100px;
        --radius:16px;
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--bg);
        color:var(--text);
        line-height:1.45;
      }
      a{color:inherit;text-decoration:none}
      a:hover{opacity:.92}

      .wrap{max-width:var(--max);margin:0 auto;padding:22px 20px 70px}

      /* Top bar */
      .top{
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:16px;
        padding:10px 4px;
      }

      /* ✅ only mascot on the left */
      .brand{
        display:flex;
        align-items:center;
        gap:10px;
        min-height:44px;
      }
      .mascot{
        width:26px;
        height:26px;
        border-radius:10px;
        display:block;
        object-fit:contain;
      }

      .tabs{
        display:flex;
        gap:8px;
        align-items:center;
        background:var(--pill);
        border:1px solid var(--line);
        border-radius:999px;
        padding:6px;
      }
      .tab{
        padding:8px 12px;
        border-radius:999px;
        font-weight:700;
        font-size:14px;
        color:rgba(11,12,16,.72);
      }
      .tab.active{
        background:#0b0c10;
        color:#fff;
      }

      /* Hero */
      .hero{
        padding:92px 0 42px;
        text-align:center;
      }

      /* ✅ center logo.png instead of title */
      .centerLogo{
        display:block;
        margin:0 auto 14px;
        height:40px; /* adjust if you want slightly larger/smaller */
        width:auto;
      }

      .sub{
        margin:0 auto;
        max-width:820px;
        font-size:18px;
        color:var(--muted);
      }

      /* Feature icons row */
      .features{
        margin-top:64px;
        display:grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap:26px;
      }
      @media (max-width: 980px){
        .features{grid-template-columns: repeat(2, minmax(0, 1fr));}
      }
      @media (max-width: 560px){
        .features{grid-template-columns: 1fr;}
      }
      .feat{
        text-align:center;
      }
      .featIcon{
        width:92px;height:92px;
        margin:0 auto 14px;
        display:grid;
        place-items:center;
      }
      .featIcon svg{
        width:92px;height:92px;
        stroke:#0b0c10;
        stroke-width:2.4;
        fill:none;
      }
      .feat h3{
        margin:0 0 6px;
        font-size:16px;
        letter-spacing:-.1px;
      }
      .feat p{
        margin:0 auto;
        max-width:240px;
        color:var(--muted);
        font-size:14px;
      }

      /* Footer */
      .footer{
        margin-top:72px;
        padding-top:18px;
        border-top:1px solid var(--line);
        display:flex;
        align-items:center;
        justify-content:space-between;
        gap:14px;
        flex-wrap:wrap;
        color:var(--muted);
        font-size:13px;
      }
      .links{display:flex;gap:14px;flex-wrap:wrap;align-items:center}
      .links a{color:var(--muted)}
      .links a:hover{color:var(--text)}

      /* ✅ App Store note at bottom-right */
      .appNote{
        display:inline-flex;
        align-items:center;
        gap:8px;
        padding:8px 12px;
        border:1px solid var(--line);
        border-radius:999px;
        background:#fff;
        font-weight:800;
        color:rgba(11,12,16,.78);
      }
      .appNote svg{width:18px;height:18px}
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <!-- ✅ Left: ONLY mascot -->
        <a class="brand" href="/" aria-label="FLY Unlimited">
          <img class="mascot" src="/logo-alt.png" alt="FLY mascot" />
        </a>

        <nav class="tabs" aria-label="Navigation">
          <a class="tab active" href="/">Home</a>
          <a class="tab" href="/how-it-works/">How it works</a>
          <a class="tab" href="/info/">Info</a>
        </nav>
      </header>

      <main class="hero">
        <!-- ✅ Center: logo.png -->
        <img class="centerLogo" src="/logo.png" alt="FLY Unlimited" />

        <!-- ✅ New subtitle line -->
        <p class="sub">
          Looking forward to connecting, sharing, collaborating, exchanging, creating, and FLYing with you.
        </p>

        <section class="features" aria-label="Key features">
          <div class="feat">
            <div class="featIcon">
              <svg viewBox="0 0 24 24">
                <path d="M7 6h10l-1 14H8L7 6z"/>
                <path d="M9 6V4h6v2"/>
                <path d="M6 8H4c0 3 2 5 5 5"/>
              </svg>
            </div>
            <h3>Fast</h3>
            <p>Quick flows that feel instant.</p>
          </div>

          <div class="feat">
            <div class="featIcon">
              <svg viewBox="0 0 24 24">
                <path d="M20 12v9H4v-9"/>
                <path d="M2 7h20v5H2z"/>
                <path d="M12 7v14"/>
                <path d="M12 7c-1.2 0-3-.8-3-2.2C9 3.7 10 3 11 3c1.7 0 2.6 2.1 3 4z"/>
                <path d="M12 7c1.2 0 3-.8 3-2.2C15 3.7 14 3 13 3c-1.7 0-2.6 2.1-3 4z"/>
              </svg>
            </div>
            <h3>Premium</h3>
            <p>Clean design, polished UX.</p>
          </div>

          <div class="feat">
            <div class="featIcon">
              <svg viewBox="0 0 24 24">
                <path d="M5 18h7"/>
                <path d="M14 18h2"/>
                <path d="M7 18a2 2 0 1 0 0 .01"/>
                <path d="M18 18a2 2 0 1 0 0 .01"/>
                <path d="M14 6h4l2 6h-6l-2-6"/>
                <path d="M9 12h5"/>
              </svg>
            </div>
            <h3>Reliable</h3>
            <p>Built for real-world use.</p>
          </div>

          <div class="feat">
            <div class="featIcon">
              <svg viewBox="0 0 24 24">
                <path d="M3 11v2"/>
                <path d="M6 10v4"/>
                <path d="M6 12l14-6v12l-14-6z"/>
                <path d="M6 14l2.5 6H11l-2-6"/>
              </svg>
            </div>
            <h3>Updates</h3>
            <p>Launching soon — stay tuned.</p>
          </div>
        </section>

        <footer class="footer">
          <div>© 2026 {siteName}</div>

          <div class="links">
            <a href="/info/">Contact</a>
            <a href="/terms/">Terms</a>
            <a href="/privacy/">Privacy</a>

            <!-- ✅ App Store "coming soon" bottom-right -->
            <a class="appNote" href={appStoreUrl} aria-label="App Store coming soon">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <path d="M16.6 13.2c.1 2.8 2.5 3.7 2.5 3.7s-1.9 5.3-4.5 5.3c-1.1 0-2-.7-3.2-.7s-2.3.7-3.2.7C5.8 22.2 3 17.7 3 13.6c0-3.5 2.1-5.3 4-5.3 1.2 0 2.3.8 3.2.8.9 0 2.2-.9 3.7-.9.6 0 2.6.1 3.8 2-3.4 1.9-3.1 5-3.1 5z" fill="#0b0c10" stroke="none"/>
                <path d="M15.3 2.2c.1 1.3-.5 2.6-1.3 3.5-.9.9-2.2 1.6-3.4 1.5-.2-1.3.5-2.7 1.3-3.5.9-.9 2.3-1.6 3.4-1.5z" fill="#0b0c10" stroke="none"/>
              </svg>
              App Store — Coming soon
            </a>
          </div>
        </footer>
      </main>
    </div>
  </body>
</html>
